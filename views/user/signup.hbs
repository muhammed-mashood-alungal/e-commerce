 <section class="container login-page">
    <div class="login-section-card">
        
        <div class="head">
            
            <h2 class="head-text">Welcome to e-Shop</h2>
            <p class="head-text">Sign Up Page</p>
            {{#if errorMsg}}
            <p class="error-msg">{{errorMsg}}</p>
             {{/if}}
        </div>
        <hr><form action="/signup" method="post"> 
        <div class="login-area">
            <label for=""> Full Name</label><br>
            <input type="text" name="name" id="name"><br>
            <label for="eMail">Enter your Email</label><br>
            <input type="email" id="eMail" name="email"><br> 
            <label for="passWord">Enter Your Password</label><br>
            <input type="password" id="passWord" name="password"><br><br> <br>
           <input type="submit" value="Sign Up" id="submit-button">
          
        </div>
         </form>
        <hr>
         <div class="login-page-bottom">
            <button class="sign-up-link"> <a href="/signup" >Already have an Account?</a></button>
            <button class="guest-user-link"> <a href="/" >Continue As Guest</a></button>
         </div>
          
    </div>
</section> 
<style>
    .error-msg{
        color: rgb(112, 44, 44);
    }
     
    .login-page-bottom{
        display: flex;
    justify-content: space-between;
    }
    .sign-up-link , .guest-user-link{
        background: transparent;
        border: 0;

    }
    .login-area{ 
         padding : 20px;
    }
    #submit-button{
        height: 2rem;
        border-radius: 10px;
        border: 0;
        width: 100%;
        background-color: cadetblue;
        color: White;
    }
    #submit-button:hover{
        border: 1px solid cadetblue;
         background-color: White;
        color: cadetblue;
    }
    .head-text{
        margin: 0;
    }
    .head-text:hover{
       color: rgb(54, 93, 143);
    }
     #eMail , #passWord,#name{
        width:100%;
        height: 2rem;
        border-radius: 10px;
        border: 1px solid cadetblue;
        background-color: transparent;
     }
    .head{
        display: grid;
    justify-content: center;
    justify-items: center;
}
    
    .login-page{
        display: flex;
    height: 40rem;
    align-content: center;
    justify-content: center;
    flex-wrap: wrap;
    }
    .login-section-card{
        padding: 20px;
        background-color:  #fff;
